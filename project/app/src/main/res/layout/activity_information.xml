<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.project.Information"
    android:orientation="vertical">

    <TextView
        android:text="查詢"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:id="@+id/txv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp3"
        android:layout_below="@+id/txv3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp2"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/e"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp1"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/txv2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="依商品類別:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/txv2"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txv"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="依成分種類:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/txv3"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/sp2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="依商家名稱:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/e"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
